<apex:page controller="RC_TravelDetails" showHeader="false" standardStylesheets="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false" >
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <head>
            <meta name="viewport" content="width=device-width, initial-scale=1"/>
            <apex:stylesheet value="{!URLFOR($Resource.SLDS092, 'assets/styles/salesforce-lightning-design-system-vf.css')}" /> 
            <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" />
            <style>
                .errorMsg{
                    color:red;
                }
                .mainSection {
                    width: 80%;
                }
                .contentDiv table tr th {
                    width:15%;
                    color: #54698d;
                    font-size: 12px;
                    line-height: 1.5;
                    margin-right: 12px;
                    margin-bottom: 4px;
                    font-weight: normal;
                }
                .contentDiv table tr td.dataCol.first{width:35%}
            </style>
        </head>
        
        <apex:composition template="RC_CommunityTemplate">
            <apex:define name="body">
                    
                <div style="height:60px;">&nbsp;</div>
                <div class="slds-all-elements">
                    <div id="content" class="slds-snap-content" style="z-index:100">
                        <div class="slds-content" style="min-height:500px">
                            <apex:form >
                                <div class = "slds">
                                    <div class="slds-page-header" role="banner">
                                        <div class="slds-grid slds-wrap slds-grid--align-spread">
                                            <div class="slds-col slds-size--1-of-1 slds-small-size--1-of-1 slds-medium-size--4-of-6 slds-large-size--10-of-12">
                                                <div class="slds-media">
                                                    <div class="slds-media__figure">
                                                        <span class="slds-avatar slds-avatar--medium">
                                                            <img src="{!URLFOR($Resource.SLDS092, '/assets/icons/standard/report_60.png')}" style="background-color: #8291C3;" />
                                                        </span>
                                                    </div> 
                                                    
                                                    <div class="slds-media__body">
                                                        <p class="slds-text-heading--label">{!$User.FirstName} {!$User.LastName}</p>
                                                        <h1 class="slds-text-heading--medium slds-m-right--small slds-truncate slds-align-middle" title="Expense Reports">Travel Details</h1>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="slds-col slds-no-flex slds-align-bottom">
                                                <div class="slds-button-group" role="group">
                                                    <a href="{!$site.prefix}/TravelDetailsListing" class="slds-button slds-button--neutral"> Back </a>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="slds-grid slds-wrap slds-grid--align-spread slds-page-header__detail-row">
                                            <apex:repeat value="{!$ObjectType.Contact.Fieldsets.RC_My_Profile_Header}" var="fieldval"> 
                                                <div class="slds-col--padded slds-size--2-of-6 slds-medium-size--2-of-6 slds-large-size--1-of-6">
                                                    <dl>
                                                        <dt>
                                                            <p class="slds-text-heading--label slds-truncate" title="{!fieldval.label}">{!fieldval.label}</p>
                                                        </dt>
                                                        <dd>
                                                            <p class="slds-text-body--regular slds-truncate" title="{!contact[fieldval]}"><apex:outputField value="{!contact[fieldval]}"/></p> 
                                                        </dd>
                                                    </dl>
                                                </div>
                                            </apex:repeat>
                                        </div>
                                    </div>
                                    
                                    <!-- Error Message -->
                                    <apex:outputPanel rendered="{!isError}">
                                        <div Class="slds-m-bottom--medium">
                                            <div class="slds-notify slds-notify--alert slds-theme--texture" role="alert" id="messageBanner">
                                                <div class="notify__content slds-grid">                         
                                                    <apex:outputPanel styleClass="slds-col slds-align-middle" id="idMsg">
                                                        <h2 class="slds-text-heading--small msgStyle">  
                                                            <span> 
                                                                <apex:messages /> 
                                                            </span>     
                                                        </h2>
                                                    </apex:outputPanel>
                                                </div>
                                            </div>
                                        </div>
                                    </apex:outputPanel>
                                    
                                    <!-- Start main page -->
                                    <div Class="slds-col--padded-large slds-m-top--medium">
                                        <h1 class="slds-text-heading--medium slds-m-right--small slds-truncate slds-align-middle" title="Expense Reports">Travel Detail [{!tDRdType}] </h1>
                                        <div class="slds-form--stacked slds-m-top--large">
                                            <div class="mainSection contentDiv">
                                                
                                                <!-- Columns [Record Type - Airfare] -->
                                                <apex:outputPanel rendered="{!AND(rtypeDevName == 'Airfare', isAirfareFSExist)}" >
                                                    <apex:pageBlock >
                                                        <apex:pageBlockSection columns="2">
                                                            <apex:repeat value="{!$ObjectType.TR1__Worker_Comp__c.fieldsets['RC_AirfareTravelDetailsInfo']}" var="field">
                                                                <apex:outputField value="{!travelDetail[field.FieldPath]}" />
                                                            </apex:repeat>  
                                                        </apex:pageBlockSection>
                                                    </apex:pageBlock>   
                                                </apex:outputPanel>
                                                
                                                <!-- Columns [Record Type - Lodging] -->
                                                <apex:outputPanel rendered="{!AND(rtypeDevName == 'Lodging', isLodgingFSExist)}" >
                                                    <apex:pageBlock >
                                                        <apex:pageBlockSection columns="2">
                                                            <apex:repeat value="{!$ObjectType.TR1__Worker_Comp__c.fieldsets['RC_LodgingTravelDetailsInfo']}" var="field">
                                                                <apex:outputField value="{!travelDetail[field.FieldPath]}" />
                                                            </apex:repeat>  
                                                        </apex:pageBlockSection>
                                                    </apex:pageBlock>
                                                </apex:outputPanel>    
                                                
                                                <!-- Columns [Record Type - Miscellaneous] -->
                                                <apex:outputPanel rendered="{!AND(rtypeDevName == 'Miscellaneous', isMiscellaneousFSExist)}" >
                                                    <apex:pageBlock >
                                                        <apex:pageBlockSection columns="2">
                                                            <apex:repeat value="{!$ObjectType.TR1__Worker_Comp__c.fieldsets['RC_MiscellaneousTravelDetailsInfo']}" var="field">
                                                            <apex:outputField value="{!travelDetail[field.FieldPath]}" />
                                                            </apex:repeat>  
                                                        </apex:pageBlockSection>
                                                    </apex:pageBlock>
                                                </apex:outputPanel>    
                                                
                                                <!-- Columns [Record Type - Rental Car] -->
                                                <apex:outputPanel rendered="{!AND(rtypeDevName == 'Rental_Car', isRentalCarFSExist)}" >
                                                    <apex:pageBlock >
                                                        <apex:pageBlockSection columns="2">
                                                            <apex:repeat value="{!$ObjectType.TR1__Worker_Comp__c.fieldsets['RC_RentalCarTravelDetailsInfo']}" var="field">
                                                                <apex:outputField value="{!travelDetail[field.FieldPath]}" />
                                                            </apex:repeat>  
                                                        </apex:pageBlockSection>
                                                    </apex:pageBlock>
                                                </apex:outputPanel>    
                                                
                                                <!-- Columns [Default] -->
                                                <apex:outputPanel rendered="{!isDefaultFSExist}">
                                                    <apex:pageBlock >
                                                        <apex:pageBlockSection columns="2">
                                                            <apex:repeat value="{!$ObjectType.TR1__Worker_Comp__c.fieldsets['RC_TravelDetailsInfo']}" var="field">
                                                                <apex:outputField value="{!travelDetail[field.FieldPath]}" />
                                                            </apex:repeat>  
                                                        </apex:pageBlockSection>
                                                    </apex:pageBlock>
                                                </apex:outputPanel>
                                                
                                                
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <!-- End main page -->
                                    
                                </div>
                            </apex:form>
                        </div>  
                        <br/><br/>
                        
                        <!-- Page Footer Start-->
                        <span class="nonslds">
                            <div class="footer">
                                <div class="footer-socials half-bottom">
                                    <a href="#" class="footer-share show-share-bottom"><i class="fa fa-share-alt"></i></a>
                                    <a href="#" class="footer-up"><i class="fa fa-angle-up"></i></a>
                                </div>
                                <p class="center-text">&copy; 2015 Talent Rover. All rights reserved.</p>
                            </div>   
                        </span>
                        <!-- Page Footer End-->
                        
                    </div>
                </div>
            </apex:define> 
        </apex:composition>
    </html>    
</apex:page>